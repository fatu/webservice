<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-autowire="byType">

    <bean id="logger" class="com.cave.prog.spring.test.autowiring.Logger"></bean>
    <bean id="consoleWriter" class="com.cave.prog.spring.test.autowiring.ConsoleWriter"></bean>
    <bean id="fileWriter" class="com.cave.prog.spring.test.autowiring.FileWriter"></bean>
    <bean id="squirrel" class="com.cave.prog.spring.test.autowiring.FileWriter" autowire-candidate="false"></bean>
</beans>